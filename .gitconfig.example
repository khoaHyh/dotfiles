#[include]
#  path = ~/dev/dotfiles/themes.gitconfig

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
  dark = true
  side-by-side = true
  true-color = always
  # features = gruvmax-fang
  # features = mellow-barbet

[merge]
  conflictStyle = zdiff3

[diff]
  colorMoved = default
